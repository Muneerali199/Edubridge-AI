# EduBridge Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edubridge
DB_USER=edubridge
DB_PASSWORD=edubridge_dev_password

# ==============================================
# Redis Configuration
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=edubridge_redis_password

# ==============================================
# MinIO/S3 Configuration
# ==============================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=edubridge
MINIO_SECRET_KEY=edubridge_minio_password
MINIO_BUCKET_LESSONS=lessons
MINIO_BUCKET_ASSETS=assets
MINIO_BUCKET_UPLOADS=uploads

# ==============================================
# JWT Configuration
# ==============================================
# Generate a strong secret key (256-bit minimum)
# Example: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-make-it-very-long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ==============================================
# AI/LLM Configuration
# ==============================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=https://api.openai.com/v1

# Google Gemini (optional)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-pro

# AI Configuration
AI_MAX_TOKENS=1200
AI_TEMPERATURE=0.7
AI_CACHE_TTL=3600

# ==============================================
# Email Configuration (for verification/reset)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@edubridge.com

# ==============================================
# SMS Configuration (optional)
# ==============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ==============================================
# Payment Gateway Configuration
# ==============================================
# Stripe
STRIPE_API_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key

# Razorpay (for India)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ==============================================
# Application Configuration
# ==============================================
APP_ENV=development
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# ==============================================
# Monitoring & Logging
# ==============================================
LOG_LEVEL=DEBUG
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# ==============================================
# Feature Flags
# ==============================================
FEATURE_AI_TUTOR_ENABLED=true
FEATURE_LIVE_SESSIONS_ENABLED=false
FEATURE_OFFLINE_MODE_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true

# ==============================================
# Security
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ==============================================
# Development/Testing
# ==============================================
DEV_MODE=true
MOCK_AI_RESPONSES=false
SEED_DATA_ON_STARTUP=true
